{
  "name": "claude-history-viewer",
  "version": "1.0.0",
  "description": "Claude Code Session History Viewer",
  "main": "src/main.js",
  "author": "Yohan Koo",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --mac",
    "build:all": "electron-builder --mac --win --linux"
  },
  "build": {
    "appId": "com.cmdspace.claude-history-viewer",
    "productName": "Claude History Viewer",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../history-server.py",
        "to": "server/history-server.py"
      },
      {
        "from": "../update-index.py",
        "to": "server/update-index.py"
      }
    ]
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
