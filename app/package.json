{
  "name": "agent-archives",
  "version": "1.3.0",
  "description": "Agent Archives - Claude Code Session History Viewer",
  "main": "src/main.js",
  "author": "Yohan Koo",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --mac",
    "build:all": "electron-builder --mac --win --linux"
  },
  "build": {
    "appId": "com.cmdspace.agent-archives",
    "productName": "Agent Archives",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "extendInfo": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "Agent Archives Session",
            "CFBundleURLSchemes": [
              "agentarchives"
            ]
          }
        ]
      }
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../history-server.py",
        "to": "server/history-server.py"
      },
      {
        "from": "../update-index.py",
        "to": "server/update-index.py"
      },
      {
        "from": "../assets/",
        "to": "assets/"
      }
    ]
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
